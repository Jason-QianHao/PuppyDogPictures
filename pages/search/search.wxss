/* pages/search/search.wxss */
@import "../index/index.wxss";

.content{
    display: flex;
    flex-direction: column;
    min-height:0;
}
.search{
    display: flex;
    padding: 5px;
    font-size: 14px;
    background-color: #ccc;
    
}
.search button{
    width: 30%;
    height: 40px;
    line-height: 40px;
    margin-left: 5px;
}
.input{
    width:100%;
    height: 38px;
    line-height: 38px;
    border: 1px solid #ccc;
    box-shadow: inset 0 0 10px #ccc;
    color: #000;
    background-color:#fff;
    border-radius: 5px;
}
.inputShow{
    color: #000;
    font-size: 12px;
    background-color: #ccc;
    border-bottom: 1px solid #ccc;
    box-shadow: 0px 2px 5px #ccc;
    padding: 5px;
}